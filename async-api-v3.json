{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Test AsyncAPI",
    "version": "1.0.0"
  },
  "servers": {
    "websocket": {
      "host": "api.async.com",
      "protocol": "wss"
    },
    "websocket2": {
      "host": "api2.async.com",
      "protocol": "wss"
    }
  },
  "channels": {
    "testChannel": {
      "address": "/test",
      "servers": [
        { "$ref": "#/servers/websocket" }
      ],
      "messages": {
        "sendMessage": {
          "$ref": "#/components/messages/sendMessage"
        }
      }
    }
  },
  "operations": {
    "send": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/testChannel"
      },
      "messages": [
        { "$ref": "#/channels/testChannel/messages/sendMessage" }
      ]
    }
  },
  "components": {
    "messages": {
      "sendMessage": {
        "summary": "Message with marked data information.",
        "payload": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "data": {
              "$ref": "#/components/schemas/MessageData"
            }
          }
        }
      }
    },
    "schemas": {
      "MessageData": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "zipCode": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
