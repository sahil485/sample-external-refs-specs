{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Test AsyncAPI",
    "version": "1.0.0"
  },
  "servers": {
    "websocket": {
      "host": "api.async.com",
      "protocol": "wss"
    },
    "websocket2": {
      "host": "api2.async.com",
      "protocol": "wss"
    }
  },
  "channels": {
    "testChannel": {
      "address": "/test",
      "servers": [
        {
          "$ref": "#/servers/websocket"
        }
      ],
      "messages": {
        "sendMessage": {
          "$ref": "#/components/messages/sendMessage"
        },
        "sendMessage2": {
          "$ref": "#/components/messages/sendMessage2"
        }
      }
    }
  },
  "operations": {
    "send": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/testChannel"
      },
      "messages": [
        {
          "$ref": "#/channels/testChannel/messages/sendMessage"
        },
        {
          "$ref": "#/channels/testChannel/messages/sendMessage2"
        }
      ]
    }
  },
  "components": {
    "messages": {
      "sendMessage": {
        "summary": "Message with marked data information.",
        "payload": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "data": {
              "$ref": "https://raw.githubusercontent.com/sahil485/sample-external-refs-specs/refs/heads/main/async-api-v3.json#/components/schemas/MessageData"
            }
          }
        }
      },
      "sendMessage2": {
        "summary": "Message with marked data information.",
        "payload": {
          "$ref": "https://raw.githubusercontent.com/sahil485/sample-external-refs-specs/refs/heads/main/async-api-v3.json#/components/schemas/MessageData"
        }
      }
    }
  }
}
